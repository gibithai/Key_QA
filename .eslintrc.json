{
  "env": {
    "browser": true,
    "es2021": true,
    "cypress/globals": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "cypress", "prettier"
  ],
  "extends": [
    "prettier",
    "plugin:prettier/recommended",
    "eslint:recommended",
    "plugin:cypress/recommended",
    "plugin:prettier/recommended",
    "standard-with-typescript"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": [
      "./tsconfig.json"
    ]
  },
  "ignorePatterns": ["./cypress.config.ts"],
  "rules": {
    "eslint@typescript-eslint/no-unused-expressions": "off",
    "cypress/no-async-tests": "off",
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "singleQuote": true,
        "trailingComma": "none",
        "printWidth": 90
      }
    ]
  }
}